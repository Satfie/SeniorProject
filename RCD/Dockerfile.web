
FROM node:18-alpine

# Install curl for healthchecks (docker-compose uses curl in healthcheck tests)
RUN apk add --no-cache curl

WORKDIR /usr/src/app

# Only copy root package files for dependency install
COPY package*.json ./
RUN npm install --legacy-peer-deps

# Copy rest of the Next.js app from RCD root (new UI)
COPY . .

# Build production output for Next.js in RCD root
RUN npm run build

EXPOSE 3000

CMD ["npm", "start"]